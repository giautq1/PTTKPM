@using LICHSU.Areas.HistoryPage.Models;

@{
    Layout = "~/Views/Shared/_LayoutPlay.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div><center><img src="~/Images/logo33.png" style="width:15%; margin-top:20px; margin-bottom:20px;" /></center></div>
    <div id="HisContent">
        @if (ViewBag.List)
        {
            List<HistoryM> lst = ViewBag.gird;
            <table cellpadding="1" cellspacing="1" style="margin:auto; background-color:white" id="grid">
                <tr>
                    <th width="14%">Lần tham gia</th>
                    <th width="25%">Thời gian bắt đầu</th>
                    <th width="25%">Thời gian kết thúc</th>
                    <th width="18%">Mức đạt được</th>
                    <th width="18%">Tiền thưởng</th>
                </tr>
                @foreach (HistoryM his in lst)
                {
                    <tr>
                        <td>@his.STT</td>
                        <td>@his.Createdate</td>
                        <td>@his.Finishdate</td>
                        <td>@his.Level</td>
                        <td>@his.Total</td>
                    </tr>
                }
            </table>
        }
        else
        {
            <table cellpadding="1" cellspacing="1" style="margin:auto; background-color:white" id="grid">
                <tr>
                    <td>Tài khoản của bạn chưa tham gia trò chơi</td>
                </tr>
            </table>               
        }
        </div>
</body>
</html>
